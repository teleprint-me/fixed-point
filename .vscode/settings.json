{
  "editor.defaultFormatter": null,
  "editor.stickyTabStops": true,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "editor.fontSize": 12,
  "editor.fontFamily": "'Noto Sans Mono', 'Source Code Pro', 'Droid Sans Mono'",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/bin",
    "${workspaceFolder}/.venv/lib/python3.11/site-packages",
    "~/.local/lib/python3.11/site-packages"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.languageServer": "Jedi",
  "python.analysis.typeCheckingMode": "strict",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  "cmake.sourceDirectory": "${workspaceFolder}/fixed_point",
  
  // C/C++ specific settings
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/include"
  ],
  "C_Cpp.default.defines": [],
  "C_Cpp.default.compilerPath": "/usr/bin/clang",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
  
  // Enable clang-format on save for C/C++ code
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "clang-format.executable": "/usr/bin/clang-format"
}
